<Window x:Class="PixelManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelManager"
        mc:Ignorable="d"
        Title="Авторизация" Height="350" Width="400" Background="#19191a">
    <Grid>
        <Button x:Name="BT_Login" Content="Войти" Click="Login" HorizontalAlignment="Center" Margin="0,246,0,0" VerticalAlignment="Top" Height="24" Width="104"/>
        <TextBox x:Name="TB_Login" HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="30"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="130,52,0,0" VerticalAlignment="Top" Foreground="#FFB5B3B3" FontSize="16"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="130,131,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FFB5B3B3" FontSize="16"/>
        <Label x:Name="L_LoginError" Content="Неверный логин или пароль" HorizontalAlignment="Left" Margin="120,202,0,0" VerticalAlignment="Top" Width="178" Foreground="Red" Visibility="Hidden"/>
        <PasswordBox x:Name="TB_Password" HorizontalAlignment="Center" Margin="0,162,0,0" VerticalAlignment="Top" Width="140" Height="30"/>
    </Grid>
</Window>
